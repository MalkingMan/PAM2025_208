<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.news.detail.NewsDetailActivity">

    <!-- App Bar with Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_dark"
            app:navigationIcon="@drawable/ic_chevron_right"
            app:navigationIconTint="@color/text_primary"
            app:title="Article"
            app:titleTextColor="@color/text_primary"
            android:layoutDirection="rtl" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cover Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Article cover image"
                    tools:src="@drawable/placeholder_mountain" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Article Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="24dp">

                <!-- Category Badge -->
                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_category_default"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="CATEGORY"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:backgroundTint="@color/primary" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Article Title Goes Here"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="4dp"
                    tools:text="Mount Semeru Status: Level 3 Alert" />

                <!-- Meta Info (Date & Author) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:text="January 5, 2026"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        tools:text="January 5, 2026 at 10:30" />

                    <TextView
                        android:id="@+id/tvAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="6dp"
                        android:text="By Admin"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/divider" />

                <!-- Article Content -->
                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="6dp"
                    android:text="Article content will be displayed here..."
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    tools:text="Due to recent volcanic activity at Mount Semeru, authorities have raised the alert level to 3. All hikers are advised to avoid the summit area and follow official guidelines. The exclusion zone has been extended to 5km from the crater.\n\nLocal authorities are monitoring the situation closely and will provide updates as the situation develops. Hikers with existing permits for the next 2 weeks should contact the local ranger station for alternative routes or rescheduling options." />

                <!-- Tags -->
                <TextView
                    android:id="@+id/tvTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="8dp"
                    android:text="safety • volcano • semeru"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/primary"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

