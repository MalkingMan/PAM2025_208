<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MountTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:popupBackground">@color/background_card</item>
        <item name="android:dropDownListViewStyle">@style/MountTrack.DropDownListView</item>
        <item name="bottomNavigationStyle">@style/Widget.MountTrack.BottomNavigation</item>
        <item name="android:datePickerDialogTheme">@style/MountTrack.DatePickerDialog</item>
        <item name="materialCalendarTheme">@style/MountTrack_MaterialDatePicker</item>
    </style>

    <!-- DatePicker Dialog Theme -->
    <style name="MountTrack.DatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:windowBackground">@color/background_card</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Material Date Picker Theme - Full Dark Theme -->
    <style name="MountTrack_MaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:windowBackground">@color/background_card</item>
        <item name="backgroundColor">@color/background_card</item>
        <item name="shapeAppearanceMediumComponent">@style/MountTrack_ShapeAppearance_MediumComponent</item>
        <item name="materialCalendarHeaderTitle">@style/MountTrack_MaterialCalendar_HeaderTitle</item>
        <item name="materialCalendarHeaderSelection">@style/MountTrack_MaterialCalendar_HeaderSelection</item>
        <item name="materialCalendarHeaderDivider">@style/MountTrack_MaterialCalendar_HeaderDivider</item>
        <item name="materialCalendarHeaderToggleButton">@style/MountTrack_MaterialCalendar_HeaderToggleButton</item>
        <item name="materialCalendarStyle">@style/MountTrack_MaterialCalendar</item>
        <item name="materialCalendarMonthNavigationButton">@style/MountTrack_MaterialCalendar_NavigationButton</item>
        <item name="materialCalendarYearNavigationButton">@style/MountTrack_MaterialCalendar_NavigationButton</item>
    </style>

    <style name="MountTrack_MaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="dayStyle">@style/MountTrack_MaterialCalendar_Day</item>
        <item name="daySelectedStyle">@style/MountTrack_MaterialCalendar_Day_Selected</item>
        <item name="dayTodayStyle">@style/MountTrack_MaterialCalendar_Day_Today</item>
        <item name="yearStyle">@style/MountTrack_MaterialCalendar_Year</item>
        <item name="yearSelectedStyle">@style/MountTrack_MaterialCalendar_Year_Selected</item>
        <item name="yearTodayStyle">@style/MountTrack_MaterialCalendar_Year_Today</item>
    </style>

    <style name="MountTrack_MaterialCalendar_Day" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MountTrack_MaterialCalendar_Day_Selected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="MountTrack_MaterialCalendar_Day_Today" parent="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="MountTrack_MaterialCalendar_Year" parent="Widget.MaterialComponents.MaterialCalendar.Year">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MountTrack_MaterialCalendar_Year_Selected" parent="Widget.MaterialComponents.MaterialCalendar.Year.Selected">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="MountTrack_MaterialCalendar_Year_Today" parent="Widget.MaterialComponents.MaterialCalendar.Year.Today">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="MountTrack_MaterialCalendar_HeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MountTrack_MaterialCalendar_HeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MountTrack_MaterialCalendar_HeaderDivider" parent="Widget.MaterialComponents.MaterialCalendar.HeaderDivider">
        <item name="android:visibility">gone</item>
    </style>

    <style name="MountTrack_MaterialCalendar_HeaderToggleButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MountTrack_MaterialCalendar_NavigationButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:tint">@color/text_primary</item>
    </style>

    <style name="MountTrack_ShapeAppearance_MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- DropDown ListView Style -->
    <style name="MountTrack.DropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/background_card</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Exposed Dropdown Menu Style -->
    <style name="Widget.MountTrack.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="endIconTint">@color/text_secondary</item>
    </style>

    <style name="Widget.MountTrack.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/background_card</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.MountTrack.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="Widget.MountTrack.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Widget.MountTrack.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.MountTrack.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Alert Dialog Theme for Dark Mode -->
    <style name="MountTrack.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:background">@color/background_card</item>
        <item name="buttonBarPositiveButtonStyle">@style/MountTrack.AlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/MountTrack.AlertDialog.Button.Negative</item>
    </style>

    <style name="MountTrack.AlertDialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MountTrack.AlertDialog.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>