<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MountAdmin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <!-- Dropdown popup background -->
        <item name="android:popupBackground">@color/card_background</item>
        <!-- Dialog theme -->
        <item name="alertDialogTheme">@style/Theme.MountAdmin.AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/Theme.MountAdmin.AlertDialog</item>
    </style>

    <!-- Dark Alert Dialog Theme -->
    <style name="Theme.MountAdmin.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/card_background</item>
        <item name="android:windowBackground">@color/card_background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:popupBackground">@color/card_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MountAdmin.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MountAdmin.Button.Dialog.Negative</item>
    </style>

    <style name="Widget.MountAdmin.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.MountAdmin.Button.Dialog.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.MountAdmin.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Exposed Dropdown Style for dark theme -->
    <style name="Widget.MountAdmin.TextInputLayout.ExposedDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="endIconTint">@color/primary</item>
    </style>

    <style name="Widget.MountAdmin.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.MountAdmin.Button.Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>