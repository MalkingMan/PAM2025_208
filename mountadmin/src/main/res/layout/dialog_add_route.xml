<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_background"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_name"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilRouteName"
        style="@style/Widget.MountAdmin.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRouteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Senaru Trail"
            android:inputType="text"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/difficulty"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDifficulty"
        style="@style/Widget.MountAdmin.TextInputLayout.ExposedDropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxBackgroundMode="outline"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/primary">

        <AutoCompleteTextView
            android:id="@+id/actvDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select difficulty"
            android:inputType="none"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:popupBackground="@drawable/bg_dropdown_popup"
            android:dropDownVerticalOffset="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

