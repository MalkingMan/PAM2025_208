<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardWeather"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="@color/gunung_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_weather_cloudy"
                app:tint="@color/gunung_accent"
                android:contentDescription="Weather icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Current Weather"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnRefreshWeather"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="4dp"
                android:src="@drawable/ic_refresh"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_secondary"
                android:contentDescription="Refresh weather" />
        </LinearLayout>

        <!-- Loading State -->
        <ProgressBar
            android:id="@+id/progressWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="24dp"
            android:visibility="gone"
            style="?android:attr/progressBarStyleSmall" />

        <!-- Error State -->
        <TextView
            android:id="@+id/tvWeatherError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/bg_weather_icon"
            android:textColor="@color/weather_rain"
            android:textSize="13sp"
            android:gravity="center"
            android:visibility="gone"
            tools:text="Unable to load weather data" />

        <!-- Weather Content -->
        <LinearLayout
            android:id="@+id/layoutWeatherContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Temperature + Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <!-- Temperature -->
                <TextView
                    android:id="@+id/tvTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    tools:text="18Â°C" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Weather Status Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWeatherStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:chipCornerRadius="18dp"
                    app:chipMinHeight="36dp"
                    app:chipIconSize="16dp"
                    app:chipIconTint="@color/white"
                    app:chipBackgroundColor="@color/weather_clear"
                    tools:text="Partly Cloudy"
                    tools:chipIcon="@drawable/ic_weather_cloudy" />
            </LinearLayout>

            <!-- Weather Details Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <!-- Wind Speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_wind"
                        app:tint="@color/text_secondary"
                        android:contentDescription="Wind" />

                    <TextView
                        android:id="@+id/tvWindSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="12 km/h" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="48dp"
                    android:background="@color/divider" />

                <!-- Humidity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_humidity"
                        app:tint="@color/text_secondary"
                        android:contentDescription="Humidity" />

                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="78%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="48dp"
                    android:background="@color/divider" />

                <!-- Weather Code / Description -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_temperature"
                        app:tint="@color/text_secondary"
                        android:contentDescription="Condition" />

                    <TextView
                        android:id="@+id/tvCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Cloudy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Warning Banner (if applicable) -->
            <LinearLayout
                android:id="@+id/layoutWeatherWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_weather_warning"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_warning"
                    app:tint="@color/weather_fog"
                    android:contentDescription="Warning" />

                <TextView
                    android:id="@+id/tvWeatherWarning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/weather_fog"
                    android:textSize="12sp"
                    tools:text="Strong wind expected this afternoon. Advise hikers to be cautious." />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
