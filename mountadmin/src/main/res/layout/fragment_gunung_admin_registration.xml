<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gunung_bg_primary"
    android:orientation="vertical">

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrations"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Manage hike applications for this mountain."
            android:textColor="#9AA4AF"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_selected"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="All"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/chipPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Pending"
                android:textColor="#9AA4AF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/chipApproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Approved"
                android:textColor="#9AA4AF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/chipRejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Rejected"
                android:textColor="#9AA4AF"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Registrations List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRegistrations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/tvNoRegistrations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp"
        android:text="No registrations found"
        android:textColor="#9AA4AF"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>

