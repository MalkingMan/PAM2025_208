<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/gunung_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_avatar_circle" />

            <TextView
                android:id="@+id/tvAvatarInitials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="BS"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvHikerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budi Santoso"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tvHikerDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="4dp"
                    android:text="Oct 12-14"
                    android:textColor="#9AA4AF"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  â€¢  "
                    android:textColor="#9AA4AF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvHikerRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Via Sembalun"
                    android:textColor="#9AA4AF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvHikerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_pending"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Pending"
            android:textColor="@color/status_pending"
            android:textSize="11sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

